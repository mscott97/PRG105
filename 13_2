        self.mayo_bottle = tkinter.Button(self.bottom_frame, text='mayo_bottle', command=self.mayo_bottle)
        self.eggs = tkinter.Button(self.bottom_frame, text='eggs', command=self.eggs)
        self.butter = tkinter.Button(self.bottom_frame, text='butter', command=self.butter)
        self.flour = tkinter.Button(self.bottom_frame, text='flour', command=self.flour)


